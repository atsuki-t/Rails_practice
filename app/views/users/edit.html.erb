<h1>ユーザー編集</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :user_name,"ユーザーネーム" %>
    <%= f.text_field :user_name %>
  </p>
  <div class="user-flex">
    <p class="user-image"><%= image_tag current_user.avatar.url %></p>
    <p class="user-image-form">
      <%= f.label :avatar,"画像" %>
      <%= f.file_field :avatar %>
    </p>
  </div>
  <p>
    <%= f.label :email,"メールアドレス" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :introduction,"自己紹介" %>
    <%= f.text_field :introduction %>
  </p>
  <%= f.submit '更新'%>
<% end %>

<button><%= link_to "戻る", user_path(@user.id) %></button>