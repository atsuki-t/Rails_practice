<h1><%= @user.user_name %>のマイページ</h1>

<hr>
<div class="user-flex">
  <p class="user-image"><%= image_tag current_user.avatar.url %></p>
  <div>
    <p class="user-name"><%= @user.user_name %></p>
    <p class="user-email"><%= @user.email %></p>
  </div>
</div>
<p><span>自己紹介: </span><%= @user.introduction %></p>

<button><%= link_to "編集", edit_user_path(@user.id) %></button>

<% @favorite_tweets.each do |tweet| %>
  <hr>
  <p><span>ファボツイート内容: </span><%=link_to tweet.body, tweet_path(tweet.id) %></p>
<% end %>
