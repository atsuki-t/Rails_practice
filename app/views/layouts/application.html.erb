<!DOCTYPE html>
<html>
  <head>
    <title>簡易twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="constitution">
      <div class="side-menu">
        <div class="side-menu-container">
          <ul>
          <li><button><%= link_to "ツイート一覧", tweets_path %></button></li>
          <li><button><%= link_to "ユーザー一覧", users_path %></button></li>
          <% if user_signed_in? %>
          <li><button><%= link_to "新規投稿", new_tweet_path %></button></li>
          <li><button><%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %></button></li>
          <li><button><%= link_to "マイページ", user_path(current_user.id) %></button></li>
          <% else %>
          <li><button><%= link_to "新規登録", new_user_registration_path %></button></li>
          <li><button><%= link_to "ログイン", new_user_session_path %></button></li>
          <% end %>
          </ul>
        </div>
      </div>
      <div class="main">
        <div class="main-container">
          <%= yield %>
        </div>
      </div>
      <div class="other">
        <div class="other-container">
          <div class="user">
            <% if user_signed_in? %>
            <h3><%= current_user.user_name %></h3>
            <p><%= current_user.email %></p>
            <p><%= current_user.introduction %></p>
            <% else %>
            <h3>ゲスト</h3>
            <% end %>
          </div>
          <div class="news">
            <h3>おすすめニュース</h3>
            <p>aaaa</p>
            <p>bbbb</p>
            <p>cccc</p>
            <p>dddd</p>
            <p>eeee</p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
